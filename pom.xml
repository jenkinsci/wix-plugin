<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.jenkins-ci.plugins</groupId>
    <artifactId>plugin</artifactId>
    <version>1.579</version><!-- which version of Jenkins is this plugin built against? -->
  </parent>

  <!-- <groupId>de.berg.systeme.jenkins.wix</groupId>  -->
  <artifactId>wix</artifactId>
  <version>1.13-SNAPSHOT</version>
  <name>WIX Toolset Plugin</name>
  <packaging>hpi</packaging>
  
  <licenses>    
    <license>     
        <name>APL license</name>      
        <comments>All source code is under the APL license.</comments>    
    </license>  
  </licenses>

  <!-- get every artifact through repo.jenkins-ci.org, which proxies all the artifacts that we need -->
  <repositories>
    <repository>
      <id>repo.jenkins-ci.org</id>
      <url>https://repo.jenkins-ci.org/public/</url>
    </repository>
  </repositories>

  <pluginRepositories>
    <pluginRepository>
      <id>repo.jenkins-ci.org</id>
      <url>https://repo.jenkins-ci.org/public/</url>
    </pluginRepository>
  </pluginRepositories>
  <properties>
  	<maven.skip.tests>true</maven.skip.tests>
  </properties>
  <scm>
  	<url>https://github.com/jenkinsci/wix-plugin</url>
  	<connection>scm:git:ssh://github.com/jenkinsci/wix-plugin.git</connection>
  	<developerConnection>scm:git:ssh://git@github.com/jenkinsci/wix-plugin.git</developerConnection>
    <tag>wix-1.10</tag>
  </scm>
  <description>Builder for MSI packages depending on the Windows Installer XML toolset.</description>
  <organization>
  	<name>Berg Systeme</name>
  	<url>http://www.bergsysteme.de</url>
  </organization>
  
  <url>http://wiki.jenkins-ci.org/display/JENKINS/WIX+Toolset+Plugin</url>
  
  <developers>
    <developer>
      <id>rollinhand</id>
      <name>Bjoern Berg</name>
      <email>rollin.hand@gmx.de</email>
    </developer>
  </developers>
  
</project>
